{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Michael Dodd",
  "colors": {
    "primary": "#F54927",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Gem Offers",
            "pages": [
              "gem/offers_overview",
              {
                "group": "Creating offers",
                "pages": [
                  "gem/create_offers",
                  "gem/create_offers_offer_custom_fields",
                  "gem/create_offers_custom_offer_tokens",
                  "gem/create_offers_offer_templates"
